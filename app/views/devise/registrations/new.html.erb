<div class="account-page">
	<div class="container">
		<div class="row">
			<div class="col-2">
			    <div class="form-container"><!--column for form-->
				
				        <h2 class="title is-2">Sign up</h2>

				        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

				  	            <div class="field">
				    	            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
				                </div>

				                <div class="field">
                            
				                    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password 6 characters mini" %>
					              </div>
                      
				                <div class="field">
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation" %>
                        </div>

							
							          <div class="actions">
				                    <%= f.submit "Log up", class: "btn" %>
								        </div>
							          <br/>
				                <%= render "devise/shared/links" %>
				        <% end %>
				</div>
			</div>
		</div>
    </div>
</div>
