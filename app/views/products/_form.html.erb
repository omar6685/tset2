<div class="account-page">
	<div class="container">
		<div class="row">
			<div class="col-2">
			  <div class="form-container-1"><!--column for form-->
				
				        <h2 class="title-1">New Product</h2>

				        <%= simple_form_for @product, html: { multipart: true } do |f|  %>


				  	            <div class="field-2">
				    	            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
				                </div>

				                <div class="field-2">
                            
				                    <%= f.text_field :price, autocomplete: "price", placeholder: "Price" %>
					              </div>
                      
				                <div class="field-2">
                          <%= f.text_field :model, autocomplete: "model", placeholder: "Model" %>
                        </div>
                        
				                <div class="field-3">
                          <%= f.text_area :description, autocomplete: "description", placeholder: "Description" %>
                        </div>

                        <span class="select">
                          <%= f.input_field :brand, collection: Product::BRAND, prompt: "Select brand" %>
                        </span>
                        
                        <span class="select">
                          <%= f.input_field :color, collection: Product::COLOR, prompt: "Select finish" %>
                        </span>
                        
                        <span class="select">
                          <%= f.input_field :condition, collection: Product::CONDITION, prompt: "Select condition" %>
                        </span>
                        
                        <div class="file">
                            <label class="file-label">
                              <%= f.input :image, as: :file, input_html: { class:"file-input product-image" }, label: false, wrapper: false %>
                                <span class="file-cta">
                                  <span class="file-icon"><i class="fa fa-upload"></i></span>
                                  <span class="file-label">Choose a fileâ€¦</span>
                                </span>
                            </label>
                        </div>
							
							          <div class="actions-1">
				                    <%= f.button :submit, class: "btn" %>
								        </div>
                        <%= link_to 'Cancel', products_path, class:'button is-light' %>
							          <br/>
				        <% end %>
				</div>
			</div>
		</div>
  </div>
</div>
